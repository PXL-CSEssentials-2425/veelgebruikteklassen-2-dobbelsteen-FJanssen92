<Window x:Class="Dobbelsteen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dobbelsteen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF9E4545">
    <Grid>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="25,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="320" Height="180"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="390,127,0,0" VerticalAlignment="Top" Height="58" Width="130" Click="startButton_Click"/>
        <Button x:Name="newButton" Content="Opnieuw" HorizontalAlignment="Left" Margin="390,199,0,0" VerticalAlignment="Top" Height="58" Width="130" Click="newButton_Click"/>
        <Button x:Name="closeButton" Content="Sluiten" HorizontalAlignment="Left" Margin="390,273,0,0" VerticalAlignment="Top" Height="58" Width="130" Click="closeButton_Click"/>

    </Grid>
</Window>
